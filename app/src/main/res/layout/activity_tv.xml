<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".TV_Activity">



    <RelativeLayout
        android:id="@+id/lytoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D5D2D2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backtv"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="iPhones"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="40sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="105sp"
            android:src="@drawable/baseline_search_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/camera"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="65sp"
            android:src="@drawable/baseline_photo_camera_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/gelery"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25sp"
            android:src="@drawable/baseline_insert_photo_24" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvdetailes"
        android:background="@color/white"
        android:layout_marginTop="20sp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="130sp"
                android:layout_height="160sp"
                android:src="@drawable/samasungtv"/>
            <LinearLayout
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAMSUNG Crystal Vision 4K iSmart with Voice Assistant..."
                    android:textColor="@color/black"
                    android:textSize="16sp"/>


                <ImageView
                    android:layout_width="140sp"
                    android:layout_height="25sp"
                    android:src="@drawable/rating1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrows"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="39%"
                        android:layout_gravity="center"
                        android:textColor="@color/green"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="54,900"
                        android:layout_marginStart="3sp"
                        android:textColor="@color/gray"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹32,900"
                        android:layout_marginStart="5sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:src="@drawable/wow"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹31,340 with Bank offer"
                        android:layout_marginStart="5sp"
                        android:textColor="@color/blue"
                        android:layout_gravity="center"
                        android:textSize="11sp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_gravity="center"
                        android:src="@drawable/express"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPRESS "
                        android:layout_marginStart="5sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="11sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Delivery tomorrow"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="11sp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAMSUNG authorised installation"
                    android:layout_marginTop="10sp"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="90sp"
                android:background="@drawable/text_background"
                android:layout_marginTop="15sp"
                android:gravity="center"
                android:layout_marginStart="10sp"
                android:layout_height="wrap_content"
                android:text="OS: Tizen"/>

            <TextView
                android:layout_width="240sp"
                android:background="@drawable/text_background"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:layout_marginStart="10sp"
                android:layout_height="wrap_content"
                android:text="Ultra DD (4K) 3840 X 2160 Pixelsm"/>

            <TextView
                android:layout_width="140sp"
                android:background="@drawable/text_background"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:layout_marginStart="10sp"
                android:layout_height="wrap_content"
                android:text="Lanuch Year : 2023"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>